# Deny access to dot files and dot directories
location ~ /\. {
  access_log off; log_not_found off; deny all;
}

location ~ ~$  {
  access_log off; log_not_found off; deny all;
}

# Deny access to git directories
location ~ /\.git {
  access_log off; log_not_found off; deny all;
}
